<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
        <% for (let campground of campgrounds) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length) { %>
                            <img src="<%= campground.images[0].url%>" class="img-fluid" alt="">
                        <% } else {%>
                            <img src="https://res.cloudinary.com/dmjmz4ipe/image/upload/v1689191278/YelpCamp/pq7yoqy2ipxmrmyhdxjk.jpg %>" class="img-fluid" alt="">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"> <%= campground.title %> </h5>
                            <p class="card-text"> <%= campground.description %></p>
                            <p class="card-text">
                                <small class="text-muted"> <%= campground.location %></small>
                            </p>
                            <a href="campgrounds/<%= campground._id %>"class="btn btn-primary"> View <%= campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    <a href="campgrounds/new">Create Campground</a>
